<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/suap_frogys?zeroDateTimeBehavior=convertToNull</property>

    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>

    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.use_sql_comments">true</property>

    <mapping class="mx.desarrollo.entidad.Asignacion"/>
    <mapping class="mx.desarrollo.entidad.Profesor"/>
    <mapping class="mx.desarrollo.entidad.Unidadaprendizaje"/>
    <mapping class="mx.desarrollo.entidad.Usuario"/>
  </session-factory>
</hibernate-configuration>
